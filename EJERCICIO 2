/* Estilo general */
body {
    font-family: 'Courier New', Courier, monospace;
    font-size: small;
    line-height: 0.3;
    margin: 20px;
}

/* Colocamos el subrayado superior*/
.superior{
    border-top:1px solid black;
    display: inline-block;
    line height:0.20px;
    z-index: 1;
    font-weight: bold;
}

/* Resalta la palabra "pre" y "code" */
.resaltado {
    font-size: 22px;
    font-family: Georgia, 'Times New Roman', Times, serif;
    font-weight: bold;
    color: rgb(65, 11, 214);
}
.subrayado {
    border-top:1px solid black;
    display: inline-block;
    line height:0.20px;
    z-index: 1;
    font-weight: bold;
    
}

/* Estilo para la etiqueta <pre> */
pre {
    
    font-family: 'Courier New', Courier, monospace;
    white-space: pre-wrap; /* Asegura que se respeten espacios y saltos */
    
}

.susup {
    border-top:1px solid black;
    display: inline-block;
    line height:0.20px;
    z-index: 1;
    font-weight: bold;
    
    
}

/* Estilo para la etiqueta <code> */
code {
    font-family: 'Courier New', Courier, monospace;
    color: rgb(1, 1, 2);
}
